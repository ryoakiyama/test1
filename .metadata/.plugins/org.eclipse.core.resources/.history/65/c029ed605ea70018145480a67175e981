package jp.co.internous.action;

public class Hello {
	public static void main (String[] args){
		System.out.println("メソッドを呼び出します");
		hello("会津さん");
		hello("朝香さん");
		hello("ぐみさん");
		System.out.println("メソッドを呼び終わりました");
	}
	public static void hello(String name){
		System.out.println(name+"さん、おはようございます");
	}

}
